= form_for(@charity_category, :url => url, :html => {:class=>"form-inline"}) do |f|
  - if @charity_category.errors.any?
    #error_explanation
      %h2
        = pluralize(@charity_category.errors.count, "error")
        prohibited this charity category from being
        saved:
      %ul
        - @charity_category.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    = f.text_field :name
    = f.submit "Save", :class => "btn btn-primary"
