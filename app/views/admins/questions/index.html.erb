<h1>Listing questions</h1>

<table>
  <tr>
    <th>Question</th>
    <th>Answer</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <% @questions.each do |question| %>
      <tr>
        <td><%= question.question %></td>
        <td><%= question.answer %></td>
        <td><%= link_to 'Show', admins_question_path(question) %></td>
        <td><%= link_to 'Edit', edit_admins_question_path(question) %></td>
        <td><%= link_to 'Destroy', admins_question_path(question), method: :delete, data: {confirm: 'Are you sure?'} %></td>
      </tr>
  <% end %>
</table>

