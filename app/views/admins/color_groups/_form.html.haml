= form_for([:admins, @color_group]) do |f|
  - if @color_group.errors.any?
    #error_explanation
      %h2
        = pluralize(@color_group.errors.count, "error")
        prohibited this style category from being
        saved:
      %ul
        - @color_group.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit "Save", :class => "smallBtn"

