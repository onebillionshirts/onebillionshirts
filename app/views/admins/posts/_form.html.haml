= form_for(@post, :html => { :multipart => true }, :url => url) do |f|
  - if @post.errors.any?
    #error_explanation
      %h2
        = pluralize(@post.errors.count, "error")
        prohibited this post from being saved:
      %ul
        - @post.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :title
    %br/
    = f.text_field :title
  .field
    = f.label :content
    %br/
    = f.text_field :content
  .actions
    = f.submit
  - f.fields_for :assets do |asset_fields|
    .field
      = asset_fields.label :asset
      = asset_fields.file_field :asset
