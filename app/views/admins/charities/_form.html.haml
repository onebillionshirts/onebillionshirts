= form_for(@charity, :url => url) do |f|
  - if @charity.errors.any?
    #error_explanation
      %h2
        = pluralize(@charity.errors.count, "error")
        prohibited this charity from being saved:
      %ul
        - @charity.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :address
    = f.text_field :address
  .field
    = f.label :city
    = f.text_field :city
  .field
    = f.label :state
    = f.text_field :state
  .field
    = f.label :zip
    = f.text_field :zip
  .field
    %label Category
    = f.select :charity_category_id, options_from_collection_for_select(CharityCategory.all, :id, :name, @charity.charity_category.present? ? @charity.charity_category.id : nil)
  .field
    = f.label :website
    = f.text_field :website
  .field
    = f.label :tax_id
    = f.text_field :tax_id
  .field
    = f.label :mission_statement
    = f.text_area :mission_statement
  .field
    = f.label :description
    = f.text_area :description
  .field
    %label Youtube Video URL
    = f.text_field :video_url
  .field
    %label Twitter ID
    = f.text_field :twitter_id
  .field
    %label Facebook Page
    = f.text_field :facebook_page
  .field
    %label Is Featured ?
    = f.check_box :is_featured
  .field
    %label In Top 10 ?
    = f.check_box :is_top_ten
  .field
    %label Set As Default ?
    = f.check_box :is_default
  .field
    %label{:style => "width:100%"} Add Logo:
    - f.object.logo ||= Logo.new
    = f.fields_for :logo do |logo|
      = logo.file_field :image
  .field
    %label{:style => "width:100%"} Add More Pictures:
    - $f = f
    #image-form-holder
      = render :partial => '/admins/charities/images'
    .up_check_txt
      %a.add-link{:href => "/admins/charities/image_form"} add another
    / upload_hold ends
  .actions
    = f.submit "Save", :class => "smallBtn"
/ wrapper ends
:javascript
  $(".add-link").click(function () {
      $.get($(this).attr("href"), function (response) {
          $('#image-form-holder').append(response.html);
          $(".upload-field").last().remove();
      });
      return false;
  });
