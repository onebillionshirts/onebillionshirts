= form_for(@banner, :url => url, :html=>{class:"form form-horizontal"}) do |f|
  - if @banner.errors.any?
    #error_explanation
      %h2
        = pluralize(@banner.errors.count, "error")
        prohibited this banner from being saved:
      %ul
        - @banner.errors.full_messages.each do |msg|
          %li= msg
  %fieldset
    .control-group
      = f.label :content, class:"control-label",:style=>"padding-right:30px"
      .control
        = f.text_area :content
  %fieldset
    .control-group
      = f.label :image, class:"control-label",:style=>"padding-right:30px"
      .control
        = f.file_field :image
  .span2.offset4
    = f.submit "Save", :class => "btn btn-primary",:style=>"width:150px"
:javascript
  tinyMCE.init({
      mode:'textareas',
      theme:'advanced'
  });
