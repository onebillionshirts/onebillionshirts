= form_for(@questions_category, :url => url) do |f|
  - if @questions_category.errors.any?
    #error_explanation
      %h2
        = pluralize(@questions_category.errors.count, "error")
        prohibited this questions_category from being saved:
      %ul
        - @questions_category.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :category
    %br/
    = f.text_field :category
  .actions
    = f.submit "Save", class:"smallBtn"
