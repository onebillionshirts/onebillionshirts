= form_for(@questions_category, :url => url, :html => {:class=>"form-inline"}) do |f|
  - if @questions_category.errors.any?
    #error_explanation
      %h2
        = pluralize(@questions_category.errors.count, "error")
        prohibited this questions_category from being saved:
      %ul
        - @questions_category.errors.full_messages.each do |msg|
          %li= msg
  .field{style:"padding-left:40px"}
    = f.label :category, class:"control-label"
    = f.text_field :category
    = f.submit "Save", :class => "btn btn-primary",:style=>"width:150px"

