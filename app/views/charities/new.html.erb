<div class="wrapper" xmlns="http://www.w3.org/1999/html" xmlns="http://www.w3.org/1999/html">
  <%= form_for(@charity, :url => "/charities/add_charity") do |f| %>
      <div class="charity_hold">
        <% if @charity.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@charity.errors.count, "error") %> prohibited this charity from being saved:</h2>

              <ul>
                <% @charity.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
        <% end %>
        <div class="charity_lft">
          <div class="c_input">
            <label>Charity Name:</label>
            <%= f.text_field :name %>
          </div>
          <!--c_input ends-->
          <div class="c_input">
            <label>Address:</label>
            <%= f.text_field :address %>
          </div>
          <!--c_input ends-->
          <div class="input_items">
            <div class="c_input_item">
              <label>City</label>
              <%= f.text_field :city %>
            </div>
            <!--c_input ends-->
            <div class="c_input_item">
              <label>State</label>
              <%= f.text_field :state %>
            </div>
            <!--c_input ends-->
            <div class="c_input_item c_input_w">
              <label>Zip Code</label>
              <%= f.text_field :zip %>
            </div>
            <!--c_input ends-->
          </div>
          <!--input_items ends-->
          <div class="c_input">
            <label>Category:</label>

            <div class="check_text">
              <% @charity_categories.each do |category| %>
                  <div class="chk_list">
                    <%= f.radio_button :charity_category_id, category.id %>

                    <p><%= category.name %></p>
                  </div>
                  <!--chk_list ends-->
              <% end %>
            </div>
            <!--check_text ends-->
          </div>
          <!--c_input ends-->
          <div class="c_input">
            <label>Website:</label>
            <%= f.text_field :website %>
          </div>
          <!--c_input ends-->
          <div class="c_input">
            <label>Tax ID (if known):</label>
            <%= f.text_field :tax_id %>
          </div>
          <!--c_input ends-->
          <div class="c_input txt_area_mission">
            <label>Mission Statement (>100words):</label>
            <%= f.text_area :mission_statement %>
          </div>
          <!--c_input ends-->
          <div class="c_input txt_area">
            <label>Charity Description (Mission, Values, Etc):</label>
            <%= f.text_area :description %>
          </div>
          <!--c_input ends-->
          <div class="c_input">
            <label>Youtube Video:</label>
            <%= f.text_field :video_url %>
          </div>
          <!--c_input ends-->
          <div class="c_input">
            <label>Twitter ID:</label>
            <%= f.text_field :twitter_id %>
          </div>
          <!--c_input ends-->
          <div class="c_input">
            <label>Facebook Page:</label>
            <%= f.text_field :facebook_page %>
          </div>
          <!--c_input ends-->
          <div class="c_input">
            <label>Add Logo (ideal: 250px x 250px)</label>
            <% f.object.logo ||= Logo.new %>
            <%= f.fields_for :logo do |logo| %>
                <%= logo.file_field :image %>
            <% end %>
          </div>
          <div class="c_input">
            <label>Add More Pictures</label>
            <% $f = f %>
            <div class="upload_hold" id="image-form-holder">
              <%= render :partial => "/charities/image_form" %>
            </div>
            <div class="up_check_txt">
              <a href="/charities/image_form" class="add-link">add another</a>
            </div>
            <!--upload_hold ends-->
          </div>
          <!--c_input ends-->
        </div>

        <!--charity_lft ends-->
        <div class="charity_rit">
          <div id="suggest_charity_div">
            <%= render :partial => "suggest_charity" %>
          </div>

          <div style="float: left;width:100%;">
            <h2>Why Suggest Your Charity?</h2>

            <p>Suggesting a charity is free and only takes 1 minute. Once added to our site, the charity can leverage our custom base and the charities sphere of influence to create a new fundraising stream.</p>
            <span>- Leverage every order to donate to charity</span>
            <span>- Gain exposure & inform others</span>
            <span>- Share a link & create new revenue stream</span>
            <span>- It's a win-win for everyone</span>
          </div>
        </div>
        <!--charity_rit ends-->

        <div class="btn_align">
          <div class="choose_btn_2">
            <a href="javascript:void(0);" id="add-charity">Save Your Charity</a>
          </div>
        </div>

        <!--request_quote ends-->
      </div>
      <!--charity_hold ends-->
  <% end %>
</div><!--wrapper ends-->
<script type="text/javascript">

    $(".add-link").click(function () {
        $.get($(this).attr("href"), function (response) {
            $('#image-form-holder').append(response.html);
            $(".upload-field").last().remove();
        });
        return false;
    });

    $("#add_charity_website").click(function () {
        if ($('#charity_website_textfield').val().length) {
            val = $('#charity_website_textfield').val();
            $.ajax({
                url: "/charities/suggest_charity?website_url=" + val, type: 'get', dataType: 'html',
                processData: false,
                success: function (data) {
                    $('#suggest_charity_div').html(data);
                }
            });
        }
        else {
            alert("URL field is blank?")
        }
    });

    $("#add-charity").click(function () {
        $(this).closest("form").submit();
        return false;
    });



</script>
