- content_for :head do
  - @title = "Client SpotLights - OneBillionShirts"
  = @title
.wrapper
  .contentslider{:style => "width: 100%; height: 400px; margin-top: 10px;"}
    -#%a.cs_leftBtn
    -#  %img{:src => "/assets/left_img.png", :style => "top: 200px; padding: 0px;"}/
    .cs_wrapper
      %ul.cs_slider#one{:style => "left: 0px;"}
        - unless @client_spotlights.blank?
          - @client_spotlights.each do |client_spotlight|
            %li.cs_article{:style => "width: 100%; height: 700px;"}
              .client_lft
                .client_txt
                  %h2
                    Client:
                    %span= client_spotlight.name
                  %h2
                    Type:
                    %span= client_spotlight.client_spotlight_type
                  %p.txt_info= raw(client_spotlight.description)
                / client_txt ends
              / client_lft ends
              .client_rit{style:"width: 535px;"}
                = image_tag client_spotlight.client_spotlight_images.first.asset(:original) if client_spotlight.client_spotlight_images.present?
              / client_rit ends
            / End cs_article
      / End cs_slider
    / End cs_wrapper
    -#%a.cs_rightBtn
    -#  %img{:src => "/assets/right_img.png", :style => "top: 300px; padding: 0px;"}/
  / wrapper ends
:javascript
  $(function() {
      //slider = $('#one').ContentSlider({
      //    width : '960px',
      //    height : '100%',
      //    speed : 800,
      //    easing : 'easeInOutBack'
      //});
      $("#one").bxSlider({
        nextText: "",
        prevText:"",
        auto: false,
        slideWidth: 960,
        moveSlides: 1,
        pager: false,
        hideControlOnEnd: true
      })

  });
:css
  /*
          * Color, Border, and Button Rules
          */

      .cs_wrapper, .cs_article {
          background:#FFF; /* Background color for the entries */
      }

      .contentslider {
          position:relative;
          display:block;
          width:960px;
          height:740px!important;
          margin:0 auto;
          overflow:hidden;
      }
      .cs_wrapper {
          position:relative;
          display:block;
          width:100%;
          height:100%;
          margin:0;
          padding:0;
          overflow:hidden;
      }
      .cs_slider {
          position:absolute;
          width:10000px;
          height:100%;
          margin:0;
          padding:0;
      }
      .cs_article {
          float:left;
          position:relative;
          top:20px;
          left:0;
          display:block;
          width:900px;
          height:410px;
          margin-left: 50px;
          margin-right: 50px;
          padding:0;
      }

      .cs_article img {
          position:absolute;
          top:33px;
          left:0;

          border:0;
          -ms-interpolation-mode:bicubic;
      }

      .cs_leftBtn, .cs_rightBtn {
          position:absolute;

          height:400px;
          padding:10px 0;
          z-index:10000;
      }
      .cs_leftBtn {
          bottom: 20px !important;
          left: 40%;
          outline: 0 none;
          position: absolute;

      }
      .cs_rightBtn {
          bottom: 20px !important;
          left: 50%;
          outline: 0 none;
          position: absolute;
      }
      .cs_leftBtn img, .cs_rightBtn img {
          border:0;
          position:relative;
         margin-top: 208px !important;
          margin:0;
      }
      .cs_wrapper a.bx-next{
        background-image: url("/assets/right_img.png");
        position: absolute;
        height: 72px;
        width: 73px;
        bottom: 26px;
        right: 350px;
      }
      .cs_wrapper a.bx-prev{
        position: absolute;
        height: 70px;
        width: 70px;
        bottom: 26px;
        left: 350px;
        background-image: url("/assets/left_img.png");
      }
