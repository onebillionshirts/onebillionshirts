- content_for :head do
  - @title = "Client SpotLights - OneBillionShirts"
  = @title
.wrapper
  #one.contentslider{:style => "width: 100%; height: 400px; margin-top: 50px;"}
    %a.cs_leftBtn
      %img{:src => "/assets/left_img.png", :style => "top: 200px; padding: 0px;"}/
    .cs_wrapper
      .cs_slider{:style => "left: 0px;"}
        - unless @client_spotlights.blank?
          - @client_spotlights.each do |client_spotlight|
            .cs_article{:style => "width: 100%; height: 400px;"}
              .client_lft
                .client_txt
                  %h2
                    Client:
                    %span= client_spotlight.name
                  %h2
                    Type:
                    %span= client_spotlight.client_spotlight_type
                  %p.txt_info= raw(client_spotlight.description)
                / client_txt ends
              / client_lft ends
              .client_rit
                = image_tag client_spotlight.client_spotlight_images.first.asset.url if client_spotlight.client_spotlight_images.present?
              / client_rit ends
            / End cs_article
      / End cs_slider
    / End cs_wrapper
    %a.cs_rightBtn
      %img{:src => "/assets/right_img.png", :style => "top: 300px; padding: 0px;"}/
  / wrapper ends
:javascript
  $(function() {
      $('#one').ContentSlider({
          width : '960px',
          height : '400px',
          speed : 800,
          easing : 'easeInOutBack'
      });
  });
:css
  /*
          * Color, Border, and Button Rules
          */
  
      .cs_wrapper, .cs_article {
          background:#FFF; /* Background color for the entries */
      }
  
      .contentslider {
          position:relative;
          display:block;
          width:960px;
          height:740px!important;
          margin:0 auto;
          overflow:hidden;
      }
      .cs_wrapper {
          position:relative;
          display:block;
          width:100%;
          height:100%;
          margin:0;
          padding:0;
          overflow:hidden;
      }
      .cs_slider {
          position:absolute;
          width:10000px;
          height:100%;
          margin:0;
          padding:0;
      }
      .cs_article {
          float:left;
          position:relative;
          top:20px;
          left:0;
          display:block;
          width:900px;
          height:400px;
          margin:0 auto;
          padding:0;
      }
  
      .cs_article img {
          position:absolute;
          top:33px;
          left:0;
  
          border:0;
          -ms-interpolation-mode:bicubic;
      }
  
      .cs_leftBtn, .cs_rightBtn {
          position:absolute;
  
          height:400px;
          padding:10px 0;
          z-index:10000;
      }
      .cs_leftBtn {
          bottom: 130px !important;
          left: 40%;
          outline: 0 none;
          position: absolute;
  
      }
      .cs_rightBtn {
          bottom: 130px !important;
          left: 50%;
          outline: 0 none;
          position: absolute;
      }
      .cs_leftBtn img, .cs_rightBtn img {
          border:0;
          position:relative;
         margin-top: 208px !important;
          margin:0;
      }
