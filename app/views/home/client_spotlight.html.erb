
<% content_for :head do %>
    <% @title = "Client SpotLights - OneBillionShirts" %>
    <%= @title %>
<% end %>

 <div class="wrapper">

   <div class="contentslider" id="one" style="width: 100%; height: 400px; margin-top: 50px;"><a class="cs_leftBtn">
     <img src="/assets/left_img.png" style="top: 200px; padding: 0px;">
   </a>
     <div class="cs_wrapper">
       <div class="cs_slider" style="left: 0px;">
         <% unless @client_spotlights.blank? %>
         <% @client_spotlights.each do |client_spotlight| %>
         <div class="cs_article" style="width: 100%; height: 400px;">


                 <div class="client_lft">
                   <div class="client_txt">
                     <h2>Client: <span><%= client_spotlight.name %></span></h2>
                     <h2>Type: <span><%= client_spotlight.client_spotlight_type %></span></h2>
                     <p class="txt_info"><%= raw(client_spotlight.description) %></p>
                   </div><!--client_txt ends-->
                 </div><!--client_lft ends-->
                 <div class="client_rit">
                   <%= image_tag client_spotlight.client_spotlight_images.first.asset.url if client_spotlight.client_spotlight_images.present? %>
                 </div><!--client_rit ends-->


         </div><!-- End cs_article -->

         <% end %>
         <% end %>
      </div><!-- End cs_slider -->
     </div><!-- End cs_wrapper -->

     <a class="cs_rightBtn">
       <img src="/assets/right_img.png" style="top: 300px; padding: 0px;">
     </a>
   </div>


   <!--wrapper ends-->
</div>


<script type="text/javascript">
    $(function() {
        $('#one').ContentSlider({
            width : '960px',
            height : '400px',
            speed : 800,
            easing : 'easeInOutBack'
        });
    });


</script>

<style>

        /*
        * Color, Border, and Button Rules
        */

    .cs_wrapper, .cs_article {
        background:#FFF; /* Background color for the entries */
    }

    .contentslider {
        position:relative;
        display:block;
        width:960px;
        height:740px!important;
        margin:0 auto;
        overflow:hidden;
    }
    .cs_wrapper {
        position:relative;
        display:block;
        width:100%;
        height:100%;
        margin:0;
        padding:0;
        overflow:hidden;
    }
    .cs_slider {
        position:absolute;
        width:10000px;
        height:100%;
        margin:0;
        padding:0;
    }
    .cs_article {
        float:left;
        position:relative;
        top:20px;
        left:0;
        display:block;
        width:900px;
        height:400px;
        margin:0 auto;
        padding:0;
    }

    .cs_article img {
        position:absolute;
        top:33px;
        left:0;

        border:0;
        -ms-interpolation-mode:bicubic;
    }

    .cs_leftBtn, .cs_rightBtn {
        position:absolute;

        height:400px;
        padding:10px 0;
        z-index:10000;
    }
    .cs_leftBtn {
        bottom: 130px !important;
        left: 40%;
        outline: 0 none;
        position: absolute;

    }
    .cs_rightBtn {
        bottom: 130px !important;
        left: 50%;
        outline: 0 none;
        position: absolute;
    }
    .cs_leftBtn img, .cs_rightBtn img {
        border:0;
        position:relative;
       margin-top: 208px !important;
        margin:0;
    }
</style>


